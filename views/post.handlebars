<div data-id="{{this.id}}">

    <hgroup>
        <h2>{{title}}</h2>
        <cite>Posted by {{user.name}} on {{format_date date_created}}</cite>
    </hgroup>

    <div>
        <h4>{{content}}</h4>
    </div>

    {{#if logged_in}}
    <div>
        <button id="add-comment">Add Comment</button>
    </div>
    {{else}}
    <div>
        <button onclick="window.location.href='/login'">Add Comment</button>
    </div>
    {{/if}}

    <form style="display: none" id="comment-form">
        <div class="grid">
            <label for="comment-content">
                Comment:
                <input type="text" id="comment-content" name="comment-content"></input>
            </label>
            <button id="submitBtn">Submit</button>
        </div>
    </form>

    <article>
        <h5>Comments:</h5>
        {{#each comments}}
        <blockquote>{{this.content}}
            <footer>
                <cite>{{user.name}} commented on {{format_date this.date_created}}:</cite>
            </footer>
        </blockquote>
        {{/each}}
</div>

<script src="/js/comment.js"></script>